{
  "name": "kotori2",
  "version": "1.0.0",
  "description": "Un bot de Discord simple con comando ping",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.2.4"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
